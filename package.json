{
  "name": "payever-invoicer",
  "version": "0.0.1",
  "description": "",
  "author": "Vahid",
  "private": true,
  "scripts": {
    "build": "nest build",
    "build:payever-invoicer": "nest build payever-invoicer",
    "build:report-consumer": "nest build report-consumer",
    "format": "prettier --write \"{src,apps,libs,test}/**/*.ts\"",
    "format:payever-invoicer": "prettier --write \"apps/payever-invoicer/**/*.ts\"",
    "format:report-consumer": "prettier --write \"apps/report-consumer/**/*.ts\"",
    "start": "nest start",
    "start:payever-invoicer": "nest start payever-invoicer",
    "start:report-consumer": "nest start report-consumer",
    "start:dev": "nest start --watch",
    "start:payever-invoicer:dev": "nest start payever-invoicer --watch",
    "start:report-consumer:dev": "nest start report-consumer --watch",
    "start:debug": "nest start --debug --watch",
    "start:payever-invoicer:debug": "nest start payever-invoicer --debug --watch",
    "start:report-consumer:debug": "nest start report-consumer --debug --watch",
    "start:prod": "node dist/main",
    "start:payever-invoicer:prod": "node dist/apps/payever-invoicer/main",
    "start:report-consumer:prod": "node dist/apps/report-consumer/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:payever-invoicer": "eslint \"apps/payever-invoicer/**/*.ts\" --fix",
    "lint:report-consumer": "eslint \"apps/report-consumer/**/*.ts\" --fix",
    "test": "jest",
    "test:payever-invoicer": "jest --config apps/payever-invoicer/jest.config.js",
    "test:report-consumer": "jest --config apps/report-consumer/jest.config.js",
    "test:watch": "jest --watch",
    "test:payever-invoicer:watch": "jest --config apps/payever-invoicer/jest.config.js --watch",
    "test:report-consumer:watch": "jest --config apps/report-consumer/jest.config.js --watch",
    "test:cov": "jest --coverage",
    "test:payever-invoicer:cov": "jest --config apps/payever-invoicer/jest.config.js --coverage",
    "test:report-consumer:cov": "jest --config apps/report-consumer/jest.config.js --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:payever-invoicer:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --config apps/payever-invoicer/jest.config.js --runInBand",
    "test:report-consumer:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --config apps/report-consumer/jest.config.js --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:payever-invoicer:e2e": "jest --config apps/payever-invoicer/test/jest-e2e.json",
    "test:report-consumer:e2e": "jest --config apps/report-consumer/test/jest-e2e.json"
  },
  "keywords": [],
  "license": "ISC",
  "dependencies": {
    "@nestjs/axios": "^4.0.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/mapped-types": "^2.0.6",
    "@nestjs/microservices": "^10.4.15",
    "@nestjs/mongoose": "^10.1.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/schedule": "^4.1.2",
    "@nestjs/swagger": "^8.1.1",
    "@nestjs/terminus": "^10.2.3",
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.7",
    "mongoose": "^8.9.3",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.16",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  }
}
