{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Invoicer API",
      "program": "${workspaceFolder}/dist/apps/payever-invoicer/src/main.js",
      "outFiles": ["${workspaceFolder}/dist/apps/payever-invoicer/**/*.js"],
      "sourceMaps": true,
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Report Worker App",
      "program": "${workspaceFolder}/dist/apps/report-consumer/src/main.js",
      "outFiles": ["${workspaceFolder}/dist/apps/report-consumer/**/*.js"],
      "sourceMaps": true,
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "NODE_ENV": "development"
      }
    }
  ]
}
